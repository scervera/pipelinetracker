<p id="notice"><%= notice %></p>

<h4>Comments for Opportunity: <%= @opportunity.customer_name %></h4>

<table class="border border-light">
  <thead>
    <tr>
      <th>Author</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.author %></td>
        <td><%= comment.content %></td>
        <td><%#= link_to 'Edit Comment', edit_opportunity_comment_path(@opportunity, comment) %>
          <%= link_to edit_opportunity_comment_path(@opportunity, comment) do %>
              <%= fa_icon "pencil-alt 1x" %>
          <% end %>
        </td>
        <td><%#= link_to 'Delete Comment', [@opportunity, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to [@opportunity, comment], method: :delete, data: {confirm: 'Are you sure?' } do %>
            <%= fa_icon "trash 1x" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_opportunity_comment_path(@opportunity) %>
<%= link_to 'Back to Opportunity', opportunity_path(@opportunity) %>
