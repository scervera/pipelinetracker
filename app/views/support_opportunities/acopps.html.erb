
<div class="container-fluid">
    <div class="row">
    <div class="col-lg-8">
        <h1><%= @page_title %></h1>
    </div>
    <div class="col-lg-4">
      <%= link_to 'New Opportunity', new_opportunity_path, class: "btn btn-primary mb-4 btn-sm float-right" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
        <div class="text-center mb-3"><%#= paginate @opportunities %></div>
        <table class="table table-striped table-hover ">
          <!-- <col width="200"> -->
          <thead class="thead-dark">
            <tr>
              <th width="200">Customer Name</th>
              <th>AppleCare Product</th>
              <th>Anticipated Close Date</th>
              <th>Read Opportunity</th>
            </tr>
          </thead>


          <tbody>
          <% if @support_opportunities.empty? %>
              <div class="smc-alert"> There are no records matching your search criteria </div>
          <% else %>
            <% @support_opportunities.each do |support_opportunity| %>
              <tr>
                <td><%= support_opportunity.opportunity.customer_name %></td>
                <td><%= support_opportunity.apple_care.product %></td>
                <td><%= support_opportunity.fiscal_quarter %>-<%= support_opportunity.fiscal_year.strftime("%Y") %></td>
                <td>
                  <%= link_to opportunity_path(support_opportunity.opportunity_id) do %>
                    <%= fa_icon "glasses 1x" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
        <div class="text-center mt-3"><%#= paginate @opportunities %></div>  
    </div>
  </div>
</div>